<%= form_with class: 'row', model: @company do |form| %>
  <div class="my-3 d-flex flex-column">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', placeholder: "Company's Name"%>
    <% @company.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="my-3 d-flex flex-column">
    <%= form.label :address, class: 'form-label' %>
    <%= form.text_field :address, class: 'form-control', placeholder: "Company's Address" %>
    <% @company.errors.full_messages_for(:address).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="my-3 d-flex justify-content-center">
    <%= form.submit class: 'btn btn-outline-dark'%>
  </div>
<% end %>
