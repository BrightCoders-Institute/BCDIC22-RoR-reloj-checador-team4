<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, class: 'w-100'%>
  </div>

  <div class="field mt-2">
    <%= f.label :password, class: 'form-label'%><br />
    <%= f.password_field :password, class: 'w-100'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4 text-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-3 d-flex justify-content-center">
    <%= f.submit "Log in", class: 'btn btn-outline-dark' %>
  </div>
<% end %>
